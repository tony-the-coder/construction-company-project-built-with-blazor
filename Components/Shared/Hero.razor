@* File: Components/Layout/Hero.razor (or Components/Public/Shared/Hero.razor) *@

<div class="relative w-full min-h-[80vh] overflow-hidden before:block before:absolute before:bg-black before:h-full before:w-full before:top-0 before:left-0 before:z-10 before:opacity-40">

    <img src="@ImageUrl"
         class="absolute inset-0 w-full h-full object-cover"
         alt="Luxury custom home exterior or interior background">

    <div class="relative z-20 max-w-screen-lg mx-auto h-full flex items-center px-4 sm:px-6 lg:px-8">

        <div class="w-full max-w-3xl mx-auto text-center">

            <span class="uppercase text-accent dark:text-accent text-sm font-semibold mb-3 block tracking-wider font-sans">
                @Title
            </span>

            <h1 class="text-background font-extrabold text-4xl sm:text-5xl lg:text-6xl mb-6 font-serif leading-tight">
                @Subtitle
            </h1>

            <p class="text-gray-200 dark:text-gray-300 text-lg sm:text-xl font-sans">
                @Description
            </p>

            <a href="@ButtonLink"
               class="mt-8 inline-block uppercase py-3 px-8 text-base font-medium tracking-wider border border-background text-background transition duration-150 ease-in-out hover:bg-background hover:text-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-primary focus:ring-background rounded-md">
                @ButtonText
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? Title { get; set; } = "Luxury Custom Homes";
    [Parameter]
    public string? Subtitle { get; set; } = "Building Your Vision With Unrivaled Craftsmanship";
    [Parameter]
    public string? Description { get; set; } = "Experience the difference of a truly custom home, meticulously built to reflect your lifestyle by Lehman Custom Construction.";
    [Parameter]
    // **** CHANGED DEFAULT TO LOCAL PATH ****
    public string? ImageUrl { get; set; } = "/images/hero-image.jpg";
    [Parameter]
    public string? ButtonText { get; set; } = "Explore Our Work";
    [Parameter]
    public string? ButtonLink { get; set; } = "/portfolio";
}