@* Components/Hero/HeroSection.razor *@

<section class="bg-cover bg-center bg-no-repeat @($"bg-[url('{BackgroundImageUrl}')]") bg-gray-700 bg-blend-multiply mt-6 mb-6">
    <div class="px-4 mx-auto max-w-screen-xl text-center py-32 lg:py-48">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl font-jost">
            @Title
        </h1>
        <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">
            @Subtitle
        </p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
            <a href="@PrimaryButtonLink" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-off-white rounded-lg bg-brick hover:bg-secondary hover:text-accent focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900 transition-colors duration-300 ease-in-out">
                @PrimaryButtonText
                <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                </svg>
            </a>
            <a href="@SecondaryButtonLink" class="inline-flex justify-center hover:text-gray-900 items-center py-3 px-5 sm:ms-4 text-base font-medium text-center text-secondary rounded-lg border border-secondary hover:bg-gray-100 focus:ring-4 focus:ring-gray-400 duration-300 ease-in-out">
                @SecondaryButtonText
            </a>
        </div>
    </div>
</section>

@code {
    [Parameter] public string Title { get; set; } = "Designed for Life. Built to Last.";
    [Parameter] public string Subtitle { get; set; } = "From concept to completion, we create custom homes that blend luxury, functionality, and superior craftsmanship.";
    [Parameter] public string PrimaryButtonText { get; set; } = "Get started";
    [Parameter] public string PrimaryButtonLink { get; set; } = "#";
    [Parameter] public string SecondaryButtonText { get; set; } = "Learn more";
    [Parameter] public string SecondaryButtonLink { get; set; } = "#";
    [Parameter] public string BackgroundImageUrl { get; set; } = "img/interior.jpg";
}