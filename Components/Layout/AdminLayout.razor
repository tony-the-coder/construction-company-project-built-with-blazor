@* File: Components/Layout/AdminLayout.razor *@
@using Microsoft.AspNetCore.Components.Sections
@using Microsoft.AspNetCore.Components.Authorization

@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

@* Apply theme background and base font *@
<div class="flex min-h-screen bg-background font-sans">

    @* Sidebar Navigation - Use a subtle contrasting background *@
    <aside class="w-64 flex-shrink-0 bg-white dark:bg-gray-800 p-4 border-e border-subtle dark:border-gray-700 flex flex-col">

        <div class="mb-4 text-center">
            <a href="/admin" class="inline-block">
                <img src="/images/Using-this-logo-during-dev.jpg" alt="Lehman Logo" class="h-10 mx-auto" />
            </a>
            <p class="mt-2 text-sm font-semibold text-primary dark:text-gray-200">Admin Panel</p>
        </div>

        <AuthorizeView>
            <Authorized>
                <p class="mb-4 text-xs text-center text-secondary dark:text-gray-400">
                    Welcome, @context.User?.Identity?.Name!
                </p>
            </Authorized>
        </AuthorizeView>

        <hr class="border-subtle dark:border-gray-600 my-2">

        <nav class="flex-grow flex flex-col space-y-1">

            <NavLink href="admin" Match="NavLinkMatch.All"
                     class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
                     ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold">
                <span class="ml-3">Dashboard</span>
            </NavLink>

            <NavLink href="admin/blog" Match="NavLinkMatch.Prefix"
                     class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
                     ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold">
                <span class="ml-3">Manage Blog Posts</span>
            </NavLink>

            <NavLink href="admin/categories" Match="NavLinkMatch.Prefix"
                     class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
                     ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold">
                <span class="ml-3">Manage Categories</span>
            </NavLink>

            <NavLink href="admin/subscribers" Match="NavLinkMatch.Prefix"
                     class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
                     ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold">
                <span class="ml-3">Manage Subscribers</span>
            </NavLink>
            @* Add other admin links here *@
        </nav>

        <div class="mt-auto pt-4 border-t border-subtle dark:border-gray-600">
            <button @* @onclick="HandleLogout" *@
                    class="w-full flex items-center justify-center px-3 py-2 rounded-md text-sm font-medium text-red-700 dark:text-red-400 bg-red-100 dark:bg-red-900 hover:bg-red-200 dark:hover:bg-red-800">
                Logout (Placeholder)
            </button>
        </div>
    </aside>

    @* Main Content Area *@
    <main class="flex-1 p-6 md:p-8 lg:p-10 overflow-y-auto bg-background dark:bg-gray-900">
        <div class="text-primary dark:text-gray-100">
            @Body
        </div>
    </main>

</div>

