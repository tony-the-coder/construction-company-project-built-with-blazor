@* File: Components/Layout/MainLayout.razor *@
@inherits LayoutComponentBase
@using LehmanCustomConstruction.Components.Layout @* << ADDED: Needed for LoginDisplay *@
@using LehmanCustomConstruction.Components.Shared @* << ADDED: Assuming NavBar and Footer are here *@

@* Radzen Components needed globally (Dialogs, Notifications, etc.) *@
<RadzenNotification />
<RadzenComponents @rendermode="InteractiveServer" />

@* Main container: Full height, flex column, theme background/text/font *@
<div class="flex flex-col min-h-screen bg-background text-primary font-sans">

    @* 1. Header Area *@
    <header class="sticky top-0 z-40 w-full">
        @* Example: Make header sticky *@
        @* Assume NavBar handles its internal structure and styling *@
        @* Pass LoginDisplay as a parameter or render it within NavBar if possible *@
        <NavBar>
            @* Example: Render LoginDisplay in a specific slot if NavBar supports it 
             <LoginSlot>
                 <LoginDisplay />
             </LoginSlot>
             *@
        </NavBar>

        @* --- OR --- If NavBar doesn't handle it, place LoginDisplay structurally here: *@
        @* Example: Simple placement in top-right (adjust positioning/styling as needed) *@
        @* <div class="absolute top-0 right-0 p-4 z-50"> 
             <LoginDisplay />
           </div> 
        *@
        @* === YOU NEED TO INTEGRATE <LoginDisplay /> into your actual <NavBar> structure === *@

    </header>

    @* 2. Main Content Area - Grows to fill available space *@
    <main class="flex-grow">
        @* Let the specific page/component define its own padding and structure *@
        @Body
    </main>

   

    @* 3. Footer Area *@
    <footer>
        @* Assume Footer component handles its internal structure and styling *@
        <Footer />
    </footer>

</div> @* End of main flex container *@


@* Standard Blazor error UI *@
<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

