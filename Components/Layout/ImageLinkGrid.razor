@* --- File: Components/Home/ImageLinkGrid.razor (Example Name) --- *@

<div class="bg-gray-50 py-16 sm:py-24">
    @* Section background and padding *@

    @* Container controls overall width and centering *@
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">

        <h2 class="text-3xl font-bold tracking-tight text-center text-gray-900 mb-12">
            Explore Our Work @* Section Title *@
        </h2>

        @* Grid container with increased gap *@
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
            @* <-- Increased gap values *@

            @* --- Grid Item 1 --- *@
            <a href="@portfolioLink" class="block group relative overflow-hidden rounded-lg shadow-lg aspect-[4/3]">
                @* <-- Changed aspect ratio *@
                <img src="@portfolioImageUrl" alt="Portfolio" class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
                    <h3 class="text-white text-lg md:text-xl font-semibold drop-shadow-md">
                        Portfolio
                    </h3>
                </div>
            </a>

            @* --- Grid Item 2 --- *@
            <a href="@stylesLink" class="block group relative overflow-hidden rounded-lg shadow-lg aspect-[4/3]">
                @* <-- Changed aspect ratio *@
                <img src="@stylesImageUrl" alt="Styles" class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
                    <h3 class="text-white text-lg md:text-xl font-semibold drop-shadow-md">
                        Styles
                    </h3>
                </div>
            </a>

            @* --- Grid Item 3 --- *@
            <a href="@plansLink" class="block group relative overflow-hidden rounded-lg shadow-lg aspect-[4/3]">
                @* <-- Changed aspect ratio *@
                <img src="@plansImageUrl" alt="Custom Plans" class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
                    <h3 class="text-white text-lg md:text-xl font-semibold drop-shadow-md">
                        Custom Plans
                    </h3>
                </div>
            </a>

        </div> @* End Grid *@

        @* --- Added Text Section Below Grid --- *@
        <div class="mt-12 text-center">
            @* Add top margin and center text *@
            <p class="text-base text-gray-600 max-w-3xl mx-auto">
                @* Style the paragraph *@
                Browse through our project categories for inspiration, or view our complete portfolio to see the breadth of our custom home building and renovation expertise.
                @* Example text - replace with yours *@
            </p>
        </div>
        @* --- End Text Section --- *@

    </div> @* End Container *@
</div> @* End Section *@

@code {
    // Placeholder parameters or properties to hold the data for each item
    private string portfolioLink = "/portfolio";
    private string portfolioImageUrl = "/images/computer.jpg"; // Ensure image exists

    private string stylesLink = "/styles"; // Example link
    private string stylesImageUrl = "/images/construction.jpg"; // Ensure image exists

    private string plansLink = "/floorplans"; // Example link
    private string plansImageUrl = "/images/floorplan.jpg"; // Ensure image exists
}