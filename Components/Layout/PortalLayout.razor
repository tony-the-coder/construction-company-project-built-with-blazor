@* File: Components/Layout/PortalLayout.razor *@
@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavManager // Keep if needed by other parts

<RadzenNotification /> @* Ensure this is present *@
<RadzenDialog /> @* Add others if needed *@

<div class="flex min-h-screen bg-gray-100 dark:bg-gray-800 font-sans">

    <aside class="w-56 flex-shrink-0 bg-white dark:bg-gray-900 p-4 border-e border-subtle dark:border-gray-700 flex flex-col">
        <div class="mb-6 text-center">
            <a href="/" class="inline-block">
                <img src="/images/Using-this-logo-during-dev.jpg" alt="Lehman Logo" class="h-10 mx-auto" />
            </a>
            <p class="mt-2 text-xs font-semibold text-secondary dark:text-gray-400">Customer Portal</p>
        </div>

        @* User Welcome *@
        <AuthorizeView>
            <Authorized>
                <div class="mb-4 text-sm text-center text-primary dark:text-gray-200">
                    <div>Welcome,</div>
                    <div class="font-medium truncate" title="@context.User?.Identity?.Name">
                        @context.User?.Identity?.Name
                    </div>
                    @* No need to display role for customer usually *@
                </div>
            </Authorized>
            <NotAuthorized>
                <p class="mb-4 text-sm text-center text-secondary">Please log in.</p>
                @* Optional: Add login link here if sidebar is always visible *@
                @* <a href="/Account/Login" class="...">Login</a> *@
            </NotAuthorized>
        </AuthorizeView>

        <hr class="border-subtle dark:border-gray-600 my-2">

        @* Portal Navigation *@
        <nav class="flex-grow flex flex-col space-y-1">
            @* Show links only when authorized *@
            <AuthorizeView>
                <Authorized>
                    <NavLink href="/portal" Match="NavLinkMatch.All" class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold"> <span>Dashboard</span> </NavLink>
                    <NavLink href="/portal/documents" Match="NavLinkMatch.Prefix" class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold"> <span>Project Documents</span> </NavLink>
                    <NavLink href="/portal/messages" Match="NavLinkMatch.Prefix" class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold"> <span>Messages</span> </NavLink>
                    <NavLink href="/Account/Manage" Match="NavLinkMatch.Prefix" class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" ActiveClass="bg-gray-100 dark:bg-gray-700 text-accent dark:text-accent font-semibold"> <span>My Account</span> </NavLink>
                </Authorized>
            </AuthorizeView>
        </nav>

        @* Logout Button/Link *@
        <div class="mt-auto pt-4 border-t border-subtle dark:border-gray-600">
            <AuthorizeView>
                <Authorized>
                    <form action="/Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="/" /> @* Redirect to home after logout *@
                        <button type="submit" class="w-full flex items-center justify-center px-3 py-2 rounded-md text-sm font-medium text-secondary dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700"> Logout </button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="/Account/Login" class="w-full flex items-center justify-center px-3 py-2 rounded-md text-sm font-medium text-primary dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"> Login </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </aside>

    @* Main Content Area *@
    <main class="flex-1 p-6 md:p-8 lg:p-10 overflow-y-auto bg-background">
        <div class="text-primary">
            @Body
        </div>
    </main>
</div>

