@using LehmanCustomConstruction.Data.Blogs

<article class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 h-full">
    @* Added h-full for consistent card height in grid *@
    <a href="@($"/blog/{Post?.Slug}")" aria-label="@($"Read more about {Post?.Title}")">
        @if (!string.IsNullOrWhiteSpace(Post?.ImageUrl))
        {
            <img class="h-48 w-full object-cover" src="@Post.ImageUrl" alt="@($"Featured image for {Post.Title}")">
        }
        else
        {
            @* Placeholder image or background if no image exists *@
            <div class="h-48 w-full bg-gradient-to-r from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-700 flex items-center justify-center">
                <span class="text-gray-500 dark:text-gray-400 text-sm">(No Image)</span>
            </div>
        }
    </a>
    <div class="flex-1 p-6 flex flex-col justify-between">
        <div class="flex-1">
            @* Display Categories if they exist *@
            @if (Post?.BlogPostCategories?.Any() == true)
            {
                <div class="text-sm font-medium text-indigo-600 dark:text-indigo-400 mb-1 space-x-1">
                    @foreach (var postCategory in Post.BlogPostCategories)
                    {
                        <a href="@($"/blog/category/{postCategory.BlogCategory?.Slug}")" class="hover:underline">@postCategory.BlogCategory?.Name</a>
                        @* Add comma? *@

                    }
                </div>
            }
            <a href="@($"/blog/{Post?.Slug}")" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900 dark:text-white hover:text-indigo-700 dark:hover:text-indigo-400 transition duration-150 ease-in-out">@Post?.Title</p>
                <p class="mt-3 text-base text-gray-500 dark:text-gray-400 line-clamp-3">
                    @* Limits excerpt to 3 lines *@
                    @Post?.Excerpt
                </p>
            </a>
        </div>
        <div class="mt-6 flex items-center">
            @* Optionally add author info if needed *@
            <div class="flex space-x-1 text-sm text-gray-500 dark:text-gray-400">
                <time datetime="@Post?.PublishDate.ToString("yyyy-MM-dd")">@Post?.PublishDate.ToString("MMMM d, yyyy")</time>
                @if (!string.IsNullOrWhiteSpace(Post?.Author))
                {
                    <span aria-hidden="true">·</span>
                    <span>@Post.Author</span>
                }
            </div>
        </div>
    </div>
</article>

@code {
    [Parameter, EditorRequired] // Make Post parameter required
    public BlogPost? Post { get; set; }
}