@using LehmanCustomConstruction.Data.Blogs

@* --- Updated Card Styling --- *@
@* Use bg-white for contrast or remove it to inherit bg-background. Use subtle border/shadow. *@
<article class="flex flex-col rounded-lg shadow-md overflow-hidden bg-white border border-subtle h-full">
    @* Changed shadow-lg to shadow-md, changed border color, kept bg-white *@
    <a href="@($"/blog/{Post?.Slug}")" aria-label="@($"Read more about {Post?.Title}")">
        @if (!string.IsNullOrWhiteSpace(Post?.ImageUrl))
        {
            @* Kept image styling, consider aspect-ratio later if needed *@
            <img class="h-48 w-full object-cover" src="@Post.ImageUrl" alt="@($"Featured image for {Post.Title}")">
        }
        else
        {
            @* Use subtle background for placeholder, update text color *@
            <div class="h-48 w-full bg-gray-100 flex items-center justify-center">
                @* Changed gradient to bg-gray-100 *@
                <span class="text-secondary text-sm">(No Image)</span> @* Use secondary text color *@
            </div>
        }
    </a>
    <div class="flex-1 p-6 flex flex-col justify-between">
        <div class="flex-1">
            @* Display Categories - Use Accent Color for links *@
            @if (Post?.BlogPostCategories?.Any() == true)
            {
                <div class="text-sm font-medium text-accent mb-1 space-x-1">
                    @* Changed indigo to accent *@
                    @foreach (var postCategory in Post.BlogPostCategories)
                    {
                        <a href="@($"/blog/category/{postCategory.BlogCategory?.Slug}")" class="hover:underline">@postCategory.BlogCategory?.Name</a>
                        @* Add comma logic if more than one category? *@
                    }
                </div>
            }
            <a href="@($"/blog/{Post?.Slug}")" class="block mt-2">
                @* Title: Use Primary Text Color, Serif Font. Accent color on hover. *@
                <p class="text-xl font-semibold text-primary hover:text-accent transition duration-150 ease-in-out font-serif">@Post?.Title</p>
                @* Excerpt: Use Secondary Text Color, Sans Font. *@
                <p class="mt-3 text-base text-secondary line-clamp-3 font-sans">
                    @Post?.Excerpt
                </p>
            </a>
        </div>
        <div class="mt-6 flex items-center">
            @* Meta Info: Use Secondary Text Color *@
            <div class="flex space-x-1 text-sm text-secondary font-sans">
                <time datetime="@Post?.PublishDate.ToString("yyyy-MM-dd")">@Post?.PublishDate.ToString("MMMM d, yyyy")</time>
                @if (!string.IsNullOrWhiteSpace(Post?.Author))
                {
                    <span aria-hidden="true">·</span>
                    <span>@Post.Author</span>
                }
            </div>
        </div>
    </div>
</article>

@code {
    [Parameter, EditorRequired]
    public BlogPost? Post { get; set; }
}